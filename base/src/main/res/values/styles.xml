<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ChuckNorrisJokes.Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/pixelmix_bold</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">@dimen/input_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChuckNorrisJokes.Button.Primary" parent="ChuckNorrisJokes.Button.Base">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ChuckNorrisJokes.Button.Secondary" parent="ChuckNorrisJokes.Button.Base">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/pixelmix</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:height">22dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ChuckNorrisJokes.Button.List" parent="ChuckNorrisJokes.Button.Base">
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/pixelmix</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ChuckNorrisJokes.Text" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pixelmix</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ChuckNorrisJokes.Text.Title" parent="ChuckNorrisJokes.Text">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/pixelmix_bold</item>
    </style>

    <style name="ChuckNorrisJokes.Text.Text" parent="ChuckNorrisJokes.Text">
        <item name="android:lineSpacingExtra">12sp</item>

    </style>

</resources>